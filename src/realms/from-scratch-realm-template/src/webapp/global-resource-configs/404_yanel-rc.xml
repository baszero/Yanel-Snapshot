<?xml version="1.0"?>

<yanel:resource-config xmlns:yanel="http://www.wyona.org/yanel/rti/1.0">
  <yanel:rti name="404" namespace="http://www.wyona.org/yanel/resource/1.0"/>

  <yanel:custom-config>
    <views xmlns="http://www.wyona.org/yanel/rti/1.0">
      <view id="default">
        <!-- TODO: Also retrieve 404.xsl via yanelresource protocol -->
        <xslt>/app1/xslt/404.xsl</xslt>
        <xslt>yanelresource:/my-global.xsl</xslt>
<!--
        <xslt>/app1/xslt/global.xsl</xslt>
-->
        <mime-type>text/html</mime-type>
<!--
        <mime-type>application/xml</mime-type>
-->
        <serializer key="HTML_TRANSITIONAL">
          <indent>no</indent>
        </serializer>
      </view>
      <view id="xml">
        <mime-type>application/xml</mime-type>
      </view>
    </views>
  </yanel:custom-config>
</yanel:resource-config>
