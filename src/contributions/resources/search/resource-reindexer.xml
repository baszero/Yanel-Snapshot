<?xml version="1.0"?>

<resource xmlns="http://www.wyona.org/yanel/1.0"
  name="reindexer"
  namespace="http://www.wyona.org/yanel/resource/1.0"
  class="org.wyona.yanel.impl.resources.reindexer.ReindexResource"
  >
<description>
A resource in order to re-index repositories.
</description>

<rtd>
  <property name="allow-default-repos"/> <!-- INFO: Enable re-indexing of default repositories. Optional and default is 'false'. -->

  <property name="repository-id"/> <!-- INFO: Allows additonal repositories to be indexed (see http://www.yanel.org/en/documentation/realm/realm-configuration.html#yarep-repos). The property is optional. -->
</rtd>
</resource>
