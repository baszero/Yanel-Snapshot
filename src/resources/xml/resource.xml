<?xml version="1.0"?>

<resource xmlns="http://www.wyona.org/yanel/1.0"
  name="xml"
  namespace="http://www.wyona.org/yanel/resource/1.0"
  class="org.wyona.yanel.impl.resources.XMLResource"
  >
<description>
XML whereas an XSLT or multiple XSLTs can be specified and applied
</description>

<rtd>
  <property name="mime-type"/>
  <property name="source-view-mime-type"/>
  <property name="xslt" multiple="true"/>

  <!-- "yanel-path" allows to instantiate another resource which provides XML -->
  <property name="yanel-path"/>
  <property name="workflow-schema"/>
</rtd>
</resource>
