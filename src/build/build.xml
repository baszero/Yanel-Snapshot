<?xml version="1.0"?>

<project name="yanel-main" default="deploy"
 xmlns:yanel="http://www.wyona.org/yanel/1.0"
 xmlns:svnant="antlib:org.tigris.subversion.svnant"
>

  <description>Yanel Build</description>

